<ips:template parameters="$servers, $orientation, $fullWidthPage" />

{{if settings.aXenServerList_settings_footer}}
{{$totalServers = 0;}}
{{$totalPlayers = 0;}}
{{$totalPlayersMax = 0;}}
{{endif}}

{template="title" app="axenserverlist" group="servers" location="front" params="$servers, $orientation, $fullWidthPage"}

<ul class="aXenServerList_ul{{if $fullWidthPage}} aXenServerList_ul_scroll{{endif}}">
  {{foreach $servers as $row}}

  {{if settings.aXenServerList_settings_footer}}
  {{$totalServers += 1;}}
  {{$totalPlayers += $row['current_players'];}}
  {{$totalPlayersMax += $row['max_players'];}}
  {{endif}}

  {template="row" app="axenserverlist" group="servers" location="front" params="$row"}
  {{endforeach}}
</ul>

{template="footer" app="axenserverlist" group="servers" location="front" if="settings.aXenServerList_settings_footer" params="$totalServers, $totalPlayers, $totalPlayersMax"}
